# Build stage - compile Astro static site
FROM node:20-alpine AS builder

WORKDIR /build

# Copy site source
COPY site/package*.json ./
RUN npm ci

COPY site/ ./

# Build static site
RUN npm run build

# Production stage - serve with nginx
FROM nginx:alpine

# Copy built site
COPY --from=builder /build/dist /usr/share/nginx/html

# Copy nginx config
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Create directory for database (mounted from volume)
RUN mkdir -p /usr/share/nginx/html/data

# Script to copy database on startup
COPY docker/web-entrypoint.sh /docker-entrypoint.d/40-copy-db.sh
RUN chmod +x /docker-entrypoint.d/40-copy-db.sh

EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD wget -q --spider http://localhost:80/ || exit 1
