# Build stage - compile Astro static site
FROM node:20-alpine AS builder

WORKDIR /build

# Copy site source
COPY site/package*.json ./
RUN npm ci

COPY site/ ./

# Build static site
RUN npm run build

# Production stage - serve with nginx
FROM nginx:alpine

# Copy built site
COPY --from=builder /build/dist /usr/share/nginx/html

# Copy nginx config
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Remove baked-in data directory and symlink to volume mount
# This ensures nginx serves the live database from the shared volume
# (db-data:/data:ro in docker-compose.yml)
RUN rm -rf /usr/share/nginx/html/data && ln -s /data /usr/share/nginx/html/data

EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD wget -q --spider http://localhost:80/ || exit 1
