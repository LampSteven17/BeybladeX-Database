---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ratchet Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-cyber-text mb-2">
        <span class="text-cyber-pink">#</span> Ratchet Rankings
      </h1>
      <p class="text-cyber-muted">
        Ratchets ranked by weighted tournament performance. Higher score = more wins in recent events.
      </p>
    </div>

    {/* Search Bar */}
    <div class="mb-4">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search ratchets..."
          class="w-full md:w-80 px-4 py-2 pl-10 bg-cyber-card border border-cyber-border rounded-lg font-mono text-sm text-cyber-text placeholder-cyber-muted focus:outline-none focus:border-cyber-cyan focus:ring-1 focus:ring-cyber-cyan/50 transition-colors"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-cyber-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    {/* Rankings Table */}
    <div class="cyber-card">
      <div class="overflow-x-auto">
        <table class="cyber-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th>Ratchet</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 12 }, () => (
              <tr>
                <td colspan="9">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Info Section */}
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="cyber-card">
        <h3 class="text-lg font-mono font-bold text-cyber-text mb-3">
          <span class="text-cyber-pink">#</span> About Ratchets
        </h3>
        <p class="text-cyber-muted text-sm">
          Ratchets determine the height and angle of the blade. The first number indicates height
          (1 = lowest, 9 = highest) and the second indicates the angle in degrees.
        </p>
      </div>
      <div class="cyber-card">
        <h3 class="text-lg font-mono font-bold text-cyber-text mb-3">
          <span class="text-cyber-cyan">#</span> Nub Count Colors
        </h3>
        <div class="space-y-2 text-sm">
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-cyan-500/20 text-cyan-400 border border-cyan-500/40 font-mono text-xs">X-60</span>
            <span class="text-cyber-muted">6 nubs (60°)</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-amber-500/20 text-amber-400 border border-amber-500/40 font-mono text-xs">X-70</span>
            <span class="text-cyber-muted">7 nubs (70°)</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-pink-500/20 text-pink-400 border border-pink-500/40 font-mono text-xs">X-80</span>
            <span class="text-cyber-muted">8 nubs (80°)</span>
          </div>
        </div>
      </div>
      <div class="cyber-card">
        <h3 class="text-lg font-mono font-bold text-cyber-text mb-3">
          <span class="text-cyber-cyan">#</span> Scoring System
        </h3>
        <p class="text-cyber-muted text-sm">
          Score is calculated using recency-weighted placement points: 1st = 3pts, 2nd = 2pts, 3rd = 1pt.
          Recent tournaments count more than older ones.
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedRatchets, type PartStats, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  let allRatchets: PartStats[] = [];
  let searchQuery: string = '';

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      allRatchets = await getRankedRatchets(50, 2, region);
      renderTable(allRatchets);
      setupSearch();
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="9" class="text-center text-red-400 py-8">
              Failed to load ratchet rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  // Color scheme based on ratchet angle/nubs (the XX in X-XX)
  function getRatchetColor(name: string): { bg: string; text: string; border: string } {
    // Extract the angle part (e.g., "60" from "3-60")
    const match = name.match(/-(\d+)/);
    const angle = match ? match[1] : '';
    const colors: Record<string, { bg: string; text: string; border: string }> = {
      '60': { bg: 'bg-cyan-500/20', text: 'text-cyan-400', border: 'border-cyan-500/40' },
      '70': { bg: 'bg-amber-500/20', text: 'text-amber-400', border: 'border-amber-500/40' },
      '80': { bg: 'bg-pink-500/20', text: 'text-pink-400', border: 'border-pink-500/40' },
    };
    return colors[angle] || { bg: 'bg-cyber-purple/20', text: 'text-cyber-purple', border: 'border-cyber-purple/30' };
  }

  function renderTable(ratchets: Awaited<ReturnType<typeof getRankedRatchets>>) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    tbody.innerHTML = ratchets.map((ratchet) => {
      const color = getRatchetColor(ratchet.name);
      return `
      <tr class="ranking-row">
        <td class="font-mono text-center">
          <span class="rank-number text-lg">${ratchet.rank}</span>
        </td>
        <td>
          <span class="px-3 py-1 text-sm font-mono font-bold rounded ${color.bg} ${color.text} border ${color.border}">
            ${ratchet.name}
          </span>
        </td>
        <td class="text-right font-mono text-cyber-cyan">${ratchet.raw_score.toFixed(1)}</td>
        <td class="text-right font-mono">${ratchet.uses}</td>
        <td class="text-right font-mono text-amber-400">${ratchet.first}</td>
        <td class="text-right font-mono text-gray-400">${ratchet.second}</td>
        <td class="text-right font-mono text-amber-700">${ratchet.third}</td>
        <td class="text-right font-mono">${ratchet.uses > 0 ? ((ratchet.first / ratchet.uses) * 100).toFixed(1) : '0.0'}%</td>
        <td class="text-right">${getTrendHtml(ratchet.trend)}</td>
      </tr>
    `}).join('');

    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 30 });
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-green-400 text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-red-400 text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-cyber-muted text-sm">--</span>';
  }

  function setupSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        searchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }
  }

  function applyFilters() {
    let filtered = allRatchets;

    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(r => r.name.toLowerCase().includes(query));
    }

    renderTable(filtered);
  }

  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
