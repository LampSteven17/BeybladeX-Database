---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ratchet Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-fg mb-2">
        <span class="text-series-ux">#</span> Ratchet Rankings
      </h1>
      <p class="text-fg-secondary">
        Ratchets ranked by weighted tournament performance. Higher score = more wins in recent events.
      </p>
    </div>

    {/* Filter Tabs */}
    <div class="mb-4 flex flex-wrap items-center gap-2">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="50">
        <span class="w-2 h-2 rounded-full bg-ratchet-50 mr-1.5"></span>50
      </button>
      <button class="filter-btn" data-filter="55">
        <span class="w-2 h-2 rounded-full bg-ratchet-55 mr-1.5"></span>55
      </button>
      <button class="filter-btn" data-filter="60">
        <span class="w-2 h-2 rounded-full bg-ratchet-60 mr-1.5"></span>60
      </button>
      <button class="filter-btn" data-filter="65">
        <span class="w-2 h-2 rounded-full bg-ratchet-65 mr-1.5"></span>65
      </button>
      <button class="filter-btn" data-filter="70">
        <span class="w-2 h-2 rounded-full bg-ratchet-70 mr-1.5"></span>70
      </button>
      <button class="filter-btn" data-filter="80">
        <span class="w-2 h-2 rounded-full bg-ratchet-80 mr-1.5"></span>80
      </button>
      <button class="filter-btn" data-filter="85">
        <span class="w-2 h-2 rounded-full bg-ratchet-85 mr-1.5"></span>85
      </button>
    </div>

    {/* Search Bar */}
    <div class="mb-4">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search ratchets..."
          class="input w-full md:w-80 pl-10"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-fg-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    {/* Rankings Table */}
    <div class="card card-padding">
      <div class="overflow-x-auto">
        <table class="data-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th>Ratchet</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 12 }, () => (
              <tr>
                <td colspan="9">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Info Section */}
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-series-ux">#</span> About Ratchets
        </h3>
        <p class="text-fg-muted text-sm">
          Ratchets determine the height and angle of the blade. The first number indicates height
          (1 = lowest, 9 = highest) and the second indicates the angle in degrees.
        </p>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Height Colors
        </h3>
        <div class="grid grid-cols-2 gap-2 text-sm">
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-50-muted text-ratchet-50 border border-ratchet-50/40 font-mono text-xs">X-50</span>
            <span class="text-fg-muted">5 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-55-muted text-ratchet-55 border border-ratchet-55/40 font-mono text-xs">X-55</span>
            <span class="text-fg-muted">5.5 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-60-muted text-ratchet-60 border border-ratchet-60/40 font-mono text-xs">X-60</span>
            <span class="text-fg-muted">6 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-65-muted text-ratchet-65 border border-ratchet-65/40 font-mono text-xs">X-65</span>
            <span class="text-fg-muted">6.5 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-70-muted text-ratchet-70 border border-ratchet-70/40 font-mono text-xs">X-70</span>
            <span class="text-fg-muted">7 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-80-muted text-ratchet-80 border border-ratchet-80/40 font-mono text-xs">X-80</span>
            <span class="text-fg-muted">8 nubs</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-ratchet-85-muted text-ratchet-85 border border-ratchet-85/40 font-mono text-xs">X-85</span>
            <span class="text-fg-muted">8.5 nubs</span>
          </div>
        </div>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Scoring System
        </h3>
        <p class="text-fg-muted text-sm">
          Score is calculated using recency-weighted placement points: 1st = 3pts, 2nd = 2pts, 3rd = 1pt.
          Recent tournaments count more than older ones.
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedRatchets, type PartStats, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  let allRatchets: PartStats[] = [];
  let searchQuery: string = '';
  let selectedHeight: string = 'all';

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      allRatchets = await getRankedRatchets(50, 2, region);
      renderTable(allRatchets);
      setupSearch();
      setupFilters();
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="9" class="text-center text-negative py-8">
              Failed to load ratchet rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  // Color scheme based on ratchet height (the XX in X-XX)
  function getRatchetColor(name: string): { bg: string; text: string; border: string } {
    // Extract the height part (e.g., "60" from "3-60")
    const match = name.match(/-(\d+)/);
    const height = match ? match[1] : '';
    const colors: Record<string, { bg: string; text: string; border: string }> = {
      '50': { bg: 'bg-ratchet-50-muted', text: 'text-ratchet-50', border: 'border-ratchet-50/40' },
      '55': { bg: 'bg-ratchet-55-muted', text: 'text-ratchet-55', border: 'border-ratchet-55/40' },
      '60': { bg: 'bg-ratchet-60-muted', text: 'text-ratchet-60', border: 'border-ratchet-60/40' },
      '65': { bg: 'bg-ratchet-65-muted', text: 'text-ratchet-65', border: 'border-ratchet-65/40' },
      '70': { bg: 'bg-ratchet-70-muted', text: 'text-ratchet-70', border: 'border-ratchet-70/40' },
      '80': { bg: 'bg-ratchet-80-muted', text: 'text-ratchet-80', border: 'border-ratchet-80/40' },
      '85': { bg: 'bg-ratchet-85-muted', text: 'text-ratchet-85', border: 'border-ratchet-85/40' },
    };
    return colors[height] || { bg: 'bg-accent/20', text: 'text-accent', border: 'border-accent/30' };
  }

  // Extract height from ratchet name (e.g., "3-60" -> "60")
  function getRatchetHeight(name: string): string {
    const match = name.match(/-(\d+)/);
    return match ? match[1] : '';
  }

  function renderTable(ratchets: Awaited<ReturnType<typeof getRankedRatchets>>) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    tbody.innerHTML = ratchets.map((ratchet) => {
      const color = getRatchetColor(ratchet.name);
      return `
      <tr class="ranking-row">
        <td class="font-mono text-center">
          <span class="rank-number text-lg">${ratchet.rank}</span>
        </td>
        <td>
          <span class="px-3 py-1 text-sm font-mono font-bold rounded ${color.bg} ${color.text} border ${color.border}">
            ${ratchet.name}
          </span>
        </td>
        <td class="text-right font-mono text-accent">${ratchet.raw_score.toFixed(1)}</td>
        <td class="text-right font-mono">${ratchet.uses}</td>
        <td class="text-right font-mono text-tier-ss">${ratchet.first}</td>
        <td class="text-right font-mono text-fg-muted">${ratchet.second}</td>
        <td class="text-right font-mono text-tier-a">${ratchet.third}</td>
        <td class="text-right font-mono">${ratchet.uses > 0 ? ((ratchet.first / ratchet.uses) * 100).toFixed(1) : '0.0'}%</td>
        <td class="text-right">${getTrendHtml(ratchet.trend)}</td>
      </tr>
    `}).join('');

    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 30 });
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-positive text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-negative text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-fg-muted text-sm">--</span>';
  }

  function setupSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        searchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }
  }

  function setupFilters() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        selectedHeight = (btn as HTMLElement).dataset.filter || 'all';
        applyFilters();
      });
    });
  }

  function applyFilters() {
    let filtered = allRatchets;

    // Filter by height
    if (selectedHeight !== 'all') {
      filtered = filtered.filter(r => getRatchetHeight(r.name) === selectedHeight);
    }

    // Filter by search
    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(r => r.name.toLowerCase().includes(query));
    }

    renderTable(filtered);
  }

  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
