---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blade Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-fg mb-2">
        <span class="text-accent">#</span> Blade Rankings
      </h1>
      <p class="text-fg-secondary">
        Blades ranked by weighted tournament performance. Recent results count more.
      </p>
    </div>

    {/* Series Filter Tabs */}
    <div class="mb-6">
      <div class="flex flex-wrap gap-2 mb-4">
        <button
          id="filter-all"
          class="series-tab px-4 py-2 text-sm font-mono rounded-lg border transition-all duration-200 bg-accent/10 text-accent border-accent/30"
          data-series="all"
        >
          All Series
        </button>
        <button
          id="filter-bx"
          class="series-tab px-4 py-2 text-sm font-mono rounded-lg border transition-all duration-200 text-fg-muted border-stroke hover:text-series-bx hover:border-series-bx/30"
          data-series="BX"
        >
          <span class="inline-block w-2 h-2 rounded-full bg-series-bx mr-2"></span>
          BX Series
        </button>
        <button
          id="filter-ux"
          class="series-tab px-4 py-2 text-sm font-mono rounded-lg border transition-all duration-200 text-fg-muted border-stroke hover:text-series-ux hover:border-series-ux/30"
          data-series="UX"
        >
          <span class="inline-block w-2 h-2 rounded-full bg-series-ux mr-2"></span>
          UX Unique
        </button>
        <button
          id="filter-cx"
          class="series-tab px-4 py-2 text-sm font-mono rounded-lg border transition-all duration-200 text-fg-muted border-stroke hover:text-series-cx hover:border-series-cx/30"
          data-series="CX"
        >
          <span class="inline-block w-2 h-2 rounded-full bg-series-cx mr-2"></span>
          CX Custom
        </button>
      </div>
    </div>

    {/* Search Bar */}
    <div class="mb-4">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search blades..."
          class="input w-full md:w-80 pl-10"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-fg-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    {/* Tier Filter */}
    <div class="mb-6 flex flex-wrap gap-3 items-center">
      <span class="text-fg-muted text-sm">Filter by Tier:</span>
      <div class="flex flex-wrap gap-2">
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 bg-accent/10 text-accent border-accent/30" data-tier="all">All</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-ss border-tier-ss/30 hover:bg-tier-ss/10" data-tier="SS">SS</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-s border-tier-s/30 hover:bg-tier-s/10" data-tier="S">S</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-a border-tier-a/30 hover:bg-tier-a/10" data-tier="A">A</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-b border-tier-b/30 hover:bg-tier-b/10" data-tier="B">B</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-c border-tier-c/30 hover:bg-tier-c/10" data-tier="C">C</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-d border-tier-d/30 hover:bg-tier-d/10" data-tier="D">D</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-f border-tier-f/30 hover:bg-tier-f/10" data-tier="F">F</button>
      </div>
    </div>

    {/* Blade Rankings Table */}
    <div class="card card-padding">
      <div class="overflow-x-auto">
        <table class="data-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th class="w-20">Tier</th>
              <th>Blade</th>
              <th class="w-16">Series</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
              <th class="w-12"></th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 15 }, (_, i) => (
              <tr>
                <td colspan="12">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Expanded Blade Detail Panel */}
    <div id="blade-detail" class="hidden mt-6 card card-padding border-accent/30">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h2 id="detail-blade-name" class="text-2xl font-mono font-bold text-fg"></h2>
          <p class="text-fg-muted text-sm">Best ratchet + bit combinations</p>
        </div>
        <button id="close-detail" class="text-fg-muted hover:text-fg transition-colors p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div id="detail-combos" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {/* Combo cards will be inserted here */}
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedBlades, getBestCombosForBlade, BLADE_SERIES, type BladeStats, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  let currentBlades: BladeStats[] = [];
  let allBlades: BladeStats[] = [];
  let currentSeries: 'all' | 'BX' | 'CX' | 'UX' = 'all';
  let currentTier: string = 'all';
  let searchQuery: string = '';

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      allBlades = await getRankedBlades(100, 2, region);
      currentBlades = allBlades;
      renderTable(currentBlades);
      setupSeriesFilters();
      setupTierFilters();
      setupSearch();
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="12" class="text-center text-negative py-8">
              Failed to load blade rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  function setupSeriesFilters() {
    document.querySelectorAll('.series-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        const series = tab.getAttribute('data-series') as 'all' | 'BX' | 'CX' | 'UX';
        filterBySeries(series);
        updateTabStyles(series);
      });
    });
  }

  function applyFilters() {
    let filtered = allBlades;

    // Apply search filter
    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(b => b.blade.toLowerCase().includes(query));
    }

    // Apply series filter
    if (currentSeries !== 'all') {
      filtered = filtered.filter(b => b.series === currentSeries);
    }

    // Apply tier filter
    if (currentTier !== 'all') {
      filtered = filtered.filter(b => b.tier === currentTier);
    }

    currentBlades = filtered;
    renderTable(currentBlades);
  }

  function setupSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        searchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }
  }

  function filterBySeries(series: 'all' | 'BX' | 'CX' | 'UX') {
    currentSeries = series;
    applyFilters();
  }

  function setupTierFilters() {
    document.querySelectorAll('.tier-filter').forEach(btn => {
      btn.addEventListener('click', () => {
        const tier = btn.getAttribute('data-tier') || 'all';
        currentTier = tier;
        updateTierStyles(tier);
        applyFilters();
      });
    });
  }

  function updateTierStyles(activeTier: string) {
    document.querySelectorAll('.tier-filter').forEach(btn => {
      const tier = btn.getAttribute('data-tier');
      btn.classList.remove('bg-accent/10', 'bg-tier-ss/10', 'bg-tier-s/10', 'bg-tier-a/10', 'bg-tier-b/10', 'bg-tier-c/10', 'bg-tier-d/10', 'bg-tier-f/10');
      if (tier === activeTier) {
        if (tier === 'all') btn.classList.add('bg-accent/10');
        else if (tier === 'SS') btn.classList.add('bg-tier-ss/10');
        else if (tier === 'S') btn.classList.add('bg-tier-s/10');
        else if (tier === 'A') btn.classList.add('bg-tier-a/10');
        else if (tier === 'B') btn.classList.add('bg-tier-b/10');
        else if (tier === 'C') btn.classList.add('bg-tier-c/10');
        else if (tier === 'D') btn.classList.add('bg-tier-d/10');
        else if (tier === 'F') btn.classList.add('bg-tier-f/10');
      }
    });
  }

  function updateTabStyles(activeSeries: string) {
    document.querySelectorAll('.series-tab').forEach(tab => {
      const series = tab.getAttribute('data-series');
      if (series === activeSeries) {
        tab.classList.remove('text-fg-muted', 'border-stroke');
        if (series === 'BX') {
          tab.classList.add('bg-series-bx/10', 'text-series-bx', 'border-series-bx/30');
        } else if (series === 'CX') {
          tab.classList.add('bg-series-cx/10', 'text-series-cx', 'border-series-cx/30');
        } else if (series === 'UX') {
          tab.classList.add('bg-series-ux/10', 'text-series-ux', 'border-series-ux/30');
        } else {
          tab.classList.add('bg-accent/10', 'text-accent', 'border-accent/30');
        }
      } else {
        tab.classList.remove(
          'bg-accent/10', 'text-accent', 'border-accent/30',
          'bg-series-bx/10', 'text-series-bx', 'border-series-bx/30',
          'bg-series-cx/10', 'text-series-cx', 'border-series-cx/30',
          'bg-series-ux/10', 'text-series-ux', 'border-series-ux/30'
        );
        tab.classList.add('text-fg-muted', 'border-stroke');
      }
    });
  }

  function getSeriesBadge(series: string | undefined): string {
    if (!series) return '<span class="text-fg-muted text-xs">-</span>';
    const badgeClass: Record<string, string> = {
      'BX': 'badge-bx',
      'CX': 'badge-cx',
      'UX': 'badge-ux',
    };
    return `<span class="${badgeClass[series] || 'badge'}">${series}</span>`;
  }

  function renderTable(blades: BladeStats[]) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    if (blades.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="12" class="text-center text-fg-muted py-8">
            No blades found for the selected series.
          </td>
        </tr>
      `;
      return;
    }

    tbody.innerHTML = blades.map((blade) => `
      <tr class="ranking-row cursor-pointer hover:bg-panel" data-blade="${blade.blade}">
        <td class="font-mono">
          <span class="rank-number text-lg">${blade.rank}</span>
        </td>
        <td>
          ${blade.tier ? `<span class="${getTierClass(blade.tier)} cursor-pointer hover:ring-2 hover:ring-white/30" data-tier="${blade.tier}">${blade.tier}</span>` : ''}
        </td>
        <td class="font-mono font-medium text-fg">${blade.blade}</td>
        <td>${getSeriesBadge(blade.series)}</td>
        <td class="text-right font-mono text-accent">${blade.raw_score.toFixed(1)}</td>
        <td class="text-right font-mono">${blade.uses}</td>
        <td class="text-right font-mono text-tier-ss">${blade.first}</td>
        <td class="text-right font-mono text-fg-muted">${blade.second}</td>
        <td class="text-right font-mono text-tier-a">${blade.third}</td>
        <td class="text-right font-mono">
          ${blade.uses > 0 ? ((blade.first / blade.uses) * 100).toFixed(1) : '0.0'}%
        </td>
        <td class="text-right">
          ${getTrendHtml(blade.trend)}
        </td>
        <td class="text-center">
          <svg class="w-5 h-5 text-fg-muted group-hover:text-accent transition-colors inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </td>
      </tr>
    `).join('');

    // Add click handlers to rows
    tbody.querySelectorAll('.ranking-row').forEach(row => {
      row.addEventListener('click', (e) => {
        // Don't trigger row click if clicking on tier badge
        if ((e.target as HTMLElement).classList.contains('tier-badge')) return;
        const bladeName = row.getAttribute('data-blade');
        if (bladeName) showBladeDetail(bladeName);
      });
    });

    // Add click handlers to tier badges in table
    tbody.querySelectorAll('.tier-badge').forEach(badge => {
      badge.addEventListener('click', (e) => {
        e.stopPropagation();
        const tier = badge.getAttribute('data-tier') || 'all';
        currentTier = tier;
        updateTierStyles(tier);
        applyFilters();
      });
    });

    // Animate rows
    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 30 });
  }

  async function showBladeDetail(bladeName: string) {
    const detailPanel = document.getElementById('blade-detail');
    const nameEl = document.getElementById('detail-blade-name');
    const combosEl = document.getElementById('detail-combos');

    if (!detailPanel || !nameEl || !combosEl) return;

    nameEl.textContent = bladeName;
    combosEl.innerHTML = '<div class="col-span-full text-center py-4"><div class="w-8 h-8 border-2 border-stroke border-t-accent rounded-full animate-spin mx-auto"></div></div>';
    detailPanel.classList.remove('hidden');

    // Scroll to panel
    detailPanel.scrollIntoView({ behavior: 'smooth', block: 'start' });

    try {
      const region = getSelectedRegion();
      const combos = await getBestCombosForBlade(bladeName, 9, region);

      if (combos.length === 0) {
        combosEl.innerHTML = '<div class="col-span-full text-center text-fg-muted py-4">No combo data available</div>';
        return;
      }

      combosEl.innerHTML = combos.map((combo, i) => `
        <div class="card card-padding">
          <div class="flex items-start gap-3">
            <span class="rank-number text-xl">${i + 1}</span>
            <div class="flex-grow">
              <div class="font-mono font-bold text-fg">${combo.combo}</div>
              <div class="flex items-center gap-2 mt-1 text-sm">
                <span class="text-series-ux">${combo.ratchet}</span>
                <span class="text-series-bx">${combo.bit}</span>
              </div>
              <div class="flex items-center gap-4 mt-2 text-sm">
                <span class="text-accent font-mono">${combo.raw_score.toFixed(1)}</span>
                <span class="text-fg-muted">${combo.uses} uses</span>
                <span class="text-tier-ss">${combo.first} wins</span>
              </div>
            </div>
          </div>
        </div>
      `).join('');

      staggerFadeIn(combosEl.children, { delay: 50 });
    } catch (error) {
      console.error('Failed to load blade combos:', error);
      combosEl.innerHTML = '<div class="col-span-full text-center text-negative py-4">Failed to load combos</div>';
    }
  }

  function getTierClass(tier: string): string {
    const classes: Record<string, string> = {
      SS: 'tier-badge-ss',
      S: 'tier-badge-s',
      A: 'tier-badge-a',
      B: 'tier-badge-b',
      C: 'tier-badge-c',
      D: 'tier-badge-d',
      F: 'tier-badge-f',
    };
    return classes[tier] || 'tier-badge';
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-positive text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-negative text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-fg-muted text-sm">--</span>';
  }

  // Close detail panel handler
  document.getElementById('close-detail')?.addEventListener('click', () => {
    document.getElementById('blade-detail')?.classList.add('hidden');
  });

  // Load on DOM ready
  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
