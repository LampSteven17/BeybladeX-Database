---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bit Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-fg mb-2">
        <span class="text-series-bx">#</span> Bit Rankings
      </h1>
      <p class="text-fg-secondary">
        Bits (tips) ranked by weighted tournament performance. Higher score = more wins in recent events.
      </p>
    </div>

    {/* Search Bar */}
    <div class="mb-4">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search bits..."
          class="input w-full md:w-80 pl-10"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-fg-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    {/* Rankings Table */}
    <div class="card card-padding">
      <div class="overflow-x-auto">
        <table class="data-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th>Bit</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 15 }, () => (
              <tr>
                <td colspan="9">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Detail Panel (shown when bit is clicked) */}
    <div id="bit-detail" class="hidden mt-6 card card-padding border-accent/30">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h2 id="detail-bit-name" class="text-2xl font-mono font-bold text-fg"></h2>
          <p class="text-fg-muted text-sm">Top blade + ratchet combinations using this bit</p>
        </div>
        <button id="close-detail" class="text-fg-muted hover:text-fg transition-colors p-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div id="detail-combos" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {/* Combo cards will be inserted here */}
      </div>
    </div>

    {/* Info Section */}
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-series-bx">#</span> About Bits
        </h3>
        <p class="text-fg-muted text-sm">
          Bits (also called tips) are the bottom part of the Beyblade that contacts the stadium.
          They determine movement patterns - from aggressive attack types to defensive stamina types.
        </p>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Bit Types
        </h3>
        <div class="space-y-2 text-sm">
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-negative/20 text-negative border border-negative/40 font-mono text-xs">Attack</span>
            <span class="text-fg-muted">Flat, Rush, Accel, Low Flat</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-series-bx/20 text-series-bx border border-series-bx/40 font-mono text-xs">Stamina</span>
            <span class="text-fg-muted">Ball, Orb, Needle, Spike</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 rounded bg-positive/20 text-positive border border-positive/40 font-mono text-xs">Balance</span>
            <span class="text-fg-muted">Taper, Point, Unite, Level</span>
          </div>
        </div>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Scoring System
        </h3>
        <p class="text-fg-muted text-sm">
          Score is calculated using recency-weighted placement points: 1st = 3pts, 2nd = 2pts, 3rd = 1pt.
          Recent tournaments count more than older ones.
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedBits, getBestCombosForBit, type PartStats, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  let allBits: PartStats[] = [];
  let searchQuery: string = '';
  let selectedBit: string | null = null;

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      allBits = await getRankedBits(50, 2, region);
      renderTable(allBits);
      setupSearch();
      setupDetailClose();
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="9" class="text-center text-negative py-8">
              Failed to load bit rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  // Color scheme based on bit type
  // Blue = Attack, Green = Defence, Yellow = Stamina, Red = Balance
  function getBitColor(name: string): { bg: string; text: string; border: string } {
    // Attack bits - aggressive movement, flower patterns (Blue)
    const attackBits = [
      'Flat', 'Rush', 'Accel', 'Rush Accel', 'Rubber Accel',
      'Low Flat', 'Low Rush', 'Under Flat',
      'Gear Flat', 'Gear Rush',
      'Jolt', 'Kick', 'Trans Kick', 'Zap', 'Vortex',
    ];
    
    // Defence bits - stability focused, LAD (Green)
    const defenceBits = [
      'Ball', 'Orb', 'Free Ball', 'Disc Ball', 'Gear Ball', 'Wall Ball',
      'Low Orb', 'Ball Spike',
      'Unite', 'Vanguard',
    ];
    
    // Stamina bits - spin time, low friction (Yellow)
    const staminaBits = [
      'Needle', 'High Needle', 'Under Needle', 'Gear Needle',
      'Spike', 'Dot',
      'Taper', 'High Taper',
      'Point', 'Gear Point',
    ];
    
    // Balance bits - versatile, hybrid (Red)
    const balanceBits = [
      'Level', 'Elevate', 'Glide', 'Quake',
      'Hexa', 'Cyclone', 'Wedge',
    ];

    if (attackBits.includes(name)) {
      return { bg: 'bg-blue-500/10', text: 'text-blue-400', border: 'border-blue-500/30' };
    } else if (defenceBits.includes(name)) {
      return { bg: 'bg-green-500/10', text: 'text-green-400', border: 'border-green-500/30' };
    } else if (staminaBits.includes(name)) {
      return { bg: 'bg-yellow-500/10', text: 'text-yellow-400', border: 'border-yellow-500/30' };
    } else if (balanceBits.includes(name)) {
      return { bg: 'bg-red-500/10', text: 'text-red-400', border: 'border-red-500/30' };
    }
    // Default/unknown - subtle gray
    return { bg: 'bg-gray-500/10', text: 'text-gray-400', border: 'border-gray-500/30' };
  }

  function renderTable(bits: Awaited<ReturnType<typeof getRankedBits>>) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    tbody.innerHTML = bits.map((bit) => {
      const color = getBitColor(bit.name);
      return `
      <tr class="ranking-row cursor-pointer hover:bg-panel" data-bit="${bit.name}">
        <td class="font-mono text-center">
          <span class="rank-number text-lg">${bit.rank}</span>
        </td>
        <td>
          <span class="px-3 py-1 text-sm font-mono font-bold rounded ${color.bg} ${color.text} border ${color.border}">
            ${bit.name}
          </span>
        </td>
        <td class="text-right font-mono text-accent">${bit.raw_score.toFixed(1)}</td>
        <td class="text-right font-mono">${bit.uses}</td>
        <td class="text-right font-mono text-tier-ss">${bit.first}</td>
        <td class="text-right font-mono text-fg-muted">${bit.second}</td>
        <td class="text-right font-mono text-tier-a">${bit.third}</td>
        <td class="text-right font-mono">${bit.uses > 0 ? ((bit.first / bit.uses) * 100).toFixed(1) : '0.0'}%</td>
        <td class="text-right">${getTrendHtml(bit.trend)}</td>
      </tr>
    `}).join('');

    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 30 });
    setupRowClicks();
  }

  function setupRowClicks() {
    const rows = document.querySelectorAll('#rankings-body tr[data-bit]');
    rows.forEach(row => {
      row.addEventListener('click', () => {
        const bitName = row.getAttribute('data-bit');
        if (bitName) showBitDetail(bitName);
      });
    });
  }

  async function showBitDetail(bitName: string) {
    selectedBit = bitName;
    const detailEl = document.getElementById('bit-detail');
    const nameEl = document.getElementById('detail-bit-name');
    const combosEl = document.getElementById('detail-combos');

    if (!detailEl || !nameEl || !combosEl) return;

    // Show panel with loading state
    detailEl.classList.remove('hidden');
    nameEl.textContent = bitName;
    combosEl.innerHTML = '<div class="col-span-full text-center text-fg-muted py-8">Loading combos...</div>';

    // Scroll to detail panel
    detailEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

    try {
      const region = getSelectedRegion();
      const combos = await getBestCombosForBit(bitName, 6, region);

      if (combos.length === 0) {
        combosEl.innerHTML = '<div class="col-span-full text-center text-fg-muted py-8">No combo data available</div>';
        return;
      }

      combosEl.innerHTML = combos.map((combo, i) => `
        <div class="card card-padding">
          <div class="flex items-start gap-3">
            <span class="rank-number text-xl">${i + 1}</span>
            <div class="flex-grow">
              <div class="font-mono font-bold text-fg">${combo.blade}</div>
              <div class="flex items-center gap-2 mt-1 text-sm">
                <span class="text-series-ux">${combo.ratchet}</span>
              </div>
              <div class="flex items-center gap-4 mt-2 text-sm">
                <span class="text-accent font-mono">${combo.raw_score.toFixed(1)}</span>
                <span class="text-fg-muted">${combo.uses} uses</span>
                <span class="text-tier-ss">${combo.first} wins</span>
              </div>
            </div>
          </div>
        </div>
      `).join('');

      staggerFadeIn(combosEl.children, { delay: 50 });
    } catch (error) {
      console.error('Failed to load bit combos:', error);
      combosEl.innerHTML = '<div class="col-span-full text-center text-negative py-8">Failed to load combos</div>';
    }
  }

  function setupDetailClose() {
    const closeBtn = document.getElementById('close-detail');
    const detailEl = document.getElementById('bit-detail');
    if (closeBtn && detailEl) {
      closeBtn.addEventListener('click', () => {
        detailEl.classList.add('hidden');
        selectedBit = null;
      });
    }
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-positive text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-negative text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-fg-muted text-sm">--</span>';
  }

  function setupSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        searchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }
  }

  function applyFilters() {
    let filtered = allBits;

    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(b => b.name.toLowerCase().includes(query));
    }

    renderTable(filtered);
  }

  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
