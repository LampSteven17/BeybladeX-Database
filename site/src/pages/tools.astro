  function setupAutocomplete(
    inputId: string,
    dropdownId: string,
    options: string[],
    onSelect: (value: string) => void
  ) {
    const input = document.getElementById(inputId) as HTMLInputElement;
    const dropdown = document.getElementById(dropdownId) as HTMLDivElement;
    if (!input || !dropdown) return;

    let selectedIndex = -1;

    function showDropdown(filtered: string[], query: string) {
      if (filtered.length === 0) {
        dropdown.classList.add('hidden');
        return;
      }

      dropdown.innerHTML = filtered.slice(0, 10).map((opt, i) => {
        // Highlight matching text
        const lowerOpt = opt.toLowerCase();
        const lowerQuery = query.toLowerCase();
        const idx = lowerOpt.indexOf(lowerQuery);
        let html = opt;
        if (idx >= 0 && query) {
          html = opt.substring(0, idx) +
                 `<span class="autocomplete-item-highlight">${opt.substring(idx, idx + query.length)}</span>` +
                 opt.substring(idx + query.length);
        }
        return `<div class="autocomplete-item" data-value="${opt}" data-index="${i}">${html}</div>`;
      }).join('');

      dropdown.classList.remove('hidden');
      selectedIndex = -1;
    }

    function hideDropdown() {
      dropdown.classList.add('hidden');
      selectedIndex = -1;
    }

    function selectItem(value: string) {
      input.value = value;
      input.classList.add('valid');
      hideDropdown();
      onSelect(value);
    }

    // Input events
    input.addEventListener('input', () => {
      const query = input.value.trim();
      input.classList.remove('valid');

      if (query.length === 0) {
        showDropdown(options.slice(0, 10), '');
      } else {
        const filtered = options.filter(opt =>
          opt.toLowerCase().includes(query.toLowerCase())
        );
        showDropdown(filtered, query);
      }

      // Clear selection if input doesn't match any option exactly
      const exactMatch = options.find(opt => opt.toLowerCase() === query.toLowerCase());
      if (exactMatch) {
        input.classList.add('valid');
        onSelect(exactMatch);
      } else {
        onSelect('');
      }
    });

    input.addEventListener('focus', () => {
      const query = input.value.trim();
      if (query.length === 0) {
        showDropdown(options.slice(0, 10), '');
      } else {
        const filtered = options.filter(opt =>
          opt.toLowerCase().includes(query.toLowerCase())
        );
        showDropdown(filtered, query);
      }
    });

    input.addEventListener('blur', () => {
      // Delay to allow click on dropdown item
      setTimeout(() => hideDropdown(), 150);
    });

    input.addEventListener('keydown', (e) => {
      const items = dropdown.querySelectorAll('.autocomplete-item');
      if (items.length === 0) return;

      if (e.key === 'ArrowDown') {
        e.preventDefault();
        selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
        updateSelection(items);
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        selectedIndex = Math.max(selectedIndex - 1, 0);
        updateSelection(items);
      } else if (e.key === 'Enter' && selectedIndex >= 0) {
        e.preventDefault();
        const item = items[selectedIndex] as HTMLElement;
        selectItem(item.dataset.value || '');
      } else if (e.key === 'Escape') {
        hideDropdown();
      }
    });

    function updateSelection(items: NodeListOf<Element>) {
      items.forEach((item, i) => {
        if (i === selectedIndex) {
          item.classList.add('selected');
        } else {
          item.classList.remove('selected');
        }
      });
    }

    // Dropdown click
    dropdown.addEventListener('click', (e) => {
      const item = (e.target as HTMLElement).closest('.autocomplete-item') as HTMLElement;
      if (item && item.dataset.value) {
        selectItem(item.dataset.value);
      }
    });
  }

  async function initRateDeck() {
    // Wait for DB to be initialized and load data
    await initDB();

    // Load data if not already loaded
    if (allBlades.length === 0) {
      const [blades, ratchets, bits, assists, lockChips] = await Promise.all([
        getAllBlades(),
        getAllRatchets(),
        getAllBits(),
        getAllAssists(),
        getAllLockChips(),
      ]);
      allBlades = blades;
      allRatchets = ratchets;
      allBits = bits;
      allAssists = assists;
      allLockChips = lockChips;
    }

    // Build combined blade options: regular blades + CX main blades + CX combos
    const bladeOptions = [
      ...allBlades,
      ...CX_MAIN_BLADES.filter(b => !allBlades.includes(b)),
      ...CX_BLADE_COMBOS.filter(c => !allBlades.includes(c)),
    ].sort();

    // Build lock chip options from database + known chips
    const lockChipOptions = [
      ...new Set([...allLockChips, ...CX_LOCK_CHIPS])
    ].sort();

    // Setup autocomplete for each combo
    for (let i = 1; i <= 3; i++) {
      setupAutocomplete(
        `deck-blade${i}`,
        `deck-blade${i}-dropdown`,
        bladeOptions,
        (value) => {
          deckCombos[i - 1].blade = value;

          // Check if this is a CX main blade that needs a lock chip
          if (isCXMainBlade(value)) {
            showLockChipInput(i, true);
          } else {
            showLockChipInput(i, false);
            // Check if it's a CX combo (e.g., "Pegasus Blast") and extract lock chip
            const parts = value.split(' ');
            if (parts.length === 2 && CX_LOCK_CHIPS.includes(parts[0]) && CX_MAIN_BLADES.includes(parts[1])) {
              deckCombos[i - 1].lockChip = parts[0];
              deckCombos[i - 1].blade = parts[1];
            }
          }

          updateDeckComboPreview(i);
          updateRateDeckButton();
        }
      );

      setupAutocomplete(
        `deck-lockchip${i}`,
        `deck-lockchip${i}-dropdown`,
        lockChipOptions,
        (value) => {
          deckCombos[i - 1].lockChip = value;
          updateDeckComboPreview(i);
          updateRateDeckButton();
        }
      );

      setupAutocomplete(
        `deck-ratchet${i}`,
        `deck-ratchet${i}-dropdown`,
        allRatchets,
        (value) => {
          deckCombos[i - 1].ratchet = value;
          updateDeckComboPreview(i);
          updateRateDeckButton();
        }
      );

      setupAutocomplete(
        `deck-bit${i}`,
        `deck-bit${i}-dropdown`,
        allBits,
        (value) => {
          deckCombos[i - 1].bit = value;
          updateDeckComboPreview(i);
          updateRateDeckButton();
        }
      );
    }

    // Rate button
    document.getElementById('rate-deck-btn')?.addEventListener('click', runDeckRating);
  }

  function updateDeckComboPreview(comboNum: number) {
    const combo = deckCombos[comboNum - 1];
    const preview = document.getElementById(`deck-combo${comboNum}-preview`);
    const tierEl = document.getElementById(`deck-combo${comboNum}-tier`);
    const nameEl = document.getElementById(`deck-combo${comboNum}-name`);

    if (combo.blade && combo.ratchet && combo.bit) {
      preview?.classList.remove('hidden');
      // Build combo name including lock chip for CX blades
      let bladeName = combo.blade;
      if (combo.lockChip && isCXMainBlade(combo.blade)) {
        bladeName = `${combo.lockChip} ${combo.blade}`;
      }
      if (nameEl) nameEl.textContent = `${bladeName} ${combo.ratchet}${combo.bit}`;
      if (tierEl) tierEl.textContent = '...';
    } else {
      preview?.classList.add('hidden');
    }
  }

  function updateRateDeckButton() {
    const btn = document.getElementById('rate-deck-btn') as HTMLButtonElement;
    // Check if all combos are complete (CX blades need lock chip)
    const allComplete = deckCombos.every(c => {
      const hasBasic = c.blade && c.ratchet && c.bit;
      // If it's a CX main blade, also require lock chip
      if (isCXMainBlade(c.blade)) {
        return hasBasic && c.lockChip;
      }
      return hasBasic;
    });
    if (btn) {
      btn.disabled = !allComplete;
    }
  }

  function getTierColor(tier: string): string {
    switch (tier) {
      case 'S': return 'text-tier-ss';
      case 'A': return 'text-tier-a';
      case 'B': return 'text-positive';
      case 'C': return 'text-fg';
      case 'D': return 'text-fg-muted';
      case 'F': return 'text-negative';
      case '?': return 'text-series-cx';
      default: return 'text-fg';
    }
  }

  function getTierBgColor(tier: string): string {
    switch (tier) {
      case 'S': return 'border-tier-ss/50';
      case 'A': return 'border-tier-a/50';
      case 'B': return 'border-positive/50';
      case 'C': return 'border-fg/30';
      case 'D': return 'border-fg-muted/30';
      case 'F': return 'border-negative/50';
      case '?': return 'border-series-cx/50';
      default: return 'border-stroke';
    }
  }

  async function runDeckRating() {
    const emptyState = document.getElementById('deck-empty-state');
    const loadingState = document.getElementById('deck-loading-state');
    const results = document.getElementById('deck-results');

    emptyState?.classList.add('hidden');
    results?.classList.add('hidden');
    loadingState?.classList.remove('hidden');

    try {
      const rating = await rateDeck([
        { blade: deckCombos[0].blade, ratchet: deckCombos[0].ratchet, bit: deckCombos[0].bit },
        { blade: deckCombos[1].blade, ratchet: deckCombos[1].ratchet, bit: deckCombos[1].bit },
        { blade: deckCombos[2].blade, ratchet: deckCombos[2].ratchet, bit: deckCombos[2].bit },
      ]);

      displayDeckResults(rating);
    } catch (error) {
      console.error('Error rating deck:', error);
    } finally {
      loadingState?.classList.add('hidden');
    }
  }

  function displayDeckResults(rating: DeckRating) {
    const results = document.getElementById('deck-results');
    results?.classList.remove('hidden');

    // Overall score and tier
    const overallTier = document.getElementById('deck-overall-tier');
    const overallScore = document.getElementById('deck-overall-score');
    
    if (overallTier) {
      overallTier.textContent = rating.tier;
      overallTier.className = `text-6xl font-mono font-bold ${getTierColor(rating.tier)}`;
    }
    if (overallScore) {
      overallScore.textContent = `${Math.round(rating.overallScore)}/100`;
    }

    // Score bars
    const scores = [
      { id: 'meta', value: rating.metaCoverage },
      { id: 'consistency', value: rating.consistencyScore },
      { id: 'upside', value: rating.upsideScore },
      { id: 'diversity', value: rating.diversityScore },
      { id: 'surprise', value: rating.surpriseScore },
    ];

    for (const s of scores) {
      const scoreEl = document.getElementById(`deck-${s.id}-score`);
      const barEl = document.getElementById(`deck-${s.id}-bar`);
      if (scoreEl) scoreEl.textContent = Math.round(s.value).toString();
      if (barEl) barEl.style.width = `${s.value}%`;
    }

    // Combo cards
    for (let i = 0; i < 3; i++) {
      const combo = rating.combos[i];
      const cardEl = document.getElementById(`deck-combo${i + 1}-card`);
      
      // Update preview tier
      const previewTier = document.getElementById(`deck-combo${i + 1}-tier`);
      if (previewTier) {
        previewTier.textContent = combo.tier;
        previewTier.className = `font-mono font-bold text-lg ${getTierColor(combo.tier)}`;
      }

      // Update card
      const nameEl = document.getElementById(`deck-combo${i + 1}-result-name`);
      const tierEl = document.getElementById(`deck-combo${i + 1}-result-tier`);
      const usesEl = document.getElementById(`deck-combo${i + 1}-uses`);
      const winrateEl = document.getElementById(`deck-combo${i + 1}-winrate`);
      const metaEl = document.getElementById(`deck-combo${i + 1}-meta`);
      const synergyEl = document.getElementById(`deck-combo${i + 1}-synergy`);
      const badgesEl = document.getElementById(`deck-combo${i + 1}-badges`);

      if (nameEl) nameEl.textContent = combo.combo;
      if (tierEl) {
        tierEl.textContent = combo.tier;
        tierEl.className = `text-2xl font-mono font-bold ${getTierColor(combo.tier)}`;
      }
      if (usesEl) usesEl.textContent = combo.hasData ? combo.uses.toString() : 'No data';
      if (winrateEl) winrateEl.textContent = combo.hasData ? `${combo.winRate.toFixed(0)}%` : '--';
      if (metaEl) metaEl.textContent = `${Math.round(combo.metaScore)}/100`;
      if (synergyEl) synergyEl.textContent = `${Math.round(combo.synergyScore)}/100`;

      // Update card border
      if (cardEl) {
        cardEl.className = `card card-padding ${getTierBgColor(combo.tier)}`;
      }

      // Badges
      if (badgesEl) {
        const badges: string[] = [];
        if (combo.isMetaPick) badges.push('<span class="px-2 py-1 text-xs font-mono rounded bg-tier-ss/20 text-tier-ss">Meta Pick</span>');
        if (combo.isHiddenGem) badges.push('<span class="px-2 py-1 text-xs font-mono rounded bg-series-cx/20 text-series-cx">Hidden Gem</span>');
        if (combo.isRising) badges.push('<span class="px-2 py-1 text-xs font-mono rounded bg-positive/20 text-positive">Rising</span>');
        if (!combo.hasData) badges.push('<span class="px-2 py-1 text-xs font-mono rounded bg-fg-muted/20 text-fg-muted">Untested</span>');
        badgesEl.innerHTML = badges.join('');
      }
    }

    // Analysis sections
    const strengthsEl = document.getElementById('deck-strengths');
    const weaknessesEl = document.getElementById('deck-weaknesses');
    const suggestionsEl = document.getElementById('deck-suggestions');

    if (strengthsEl) {
      strengthsEl.innerHTML = rating.strengths.length > 0
        ? rating.strengths.map(s => `<li class="flex items-start gap-2"><span class="text-positive mt-1">+</span> ${s}</li>`).join('')
        : '<li class="text-fg-muted">No major strengths identified</li>';
    }

    if (weaknessesEl) {
      weaknessesEl.innerHTML = rating.weaknesses.length > 0
        ? rating.weaknesses.map(w => `<li class="flex items-start gap-2"><span class="text-negative mt-1">-</span> ${w}</li>`).join('')
        : '<li class="text-fg-muted">No major weaknesses identified</li>';
    }

    if (suggestionsEl) {
      suggestionsEl.innerHTML = rating.suggestions.length > 0
        ? rating.suggestions.map(s => `<li class="flex items-start gap-2"><span class="text-accent mt-1">*</span> ${s}</li>`).join('')
        : '<li class="text-fg-muted">Your deck looks solid!</li>';
    }
  }
