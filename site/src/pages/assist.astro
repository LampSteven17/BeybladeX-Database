---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Assist Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-fg mb-2">
        <span class="text-series-cx">#</span> Assist Rankings
      </h1>
      <p class="text-fg-secondary">
        Assist blades ranked by weighted tournament performance. These are the secondary blades used in 4-part combos.
      </p>
    </div>

    {/* Rankings Table */}
    <div class="card card-padding">
      <div class="overflow-x-auto">
        <table class="data-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th>Assist</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 10 }, () => (
              <tr>
                <td colspan="9">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Info Section */}
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-series-cx">#</span> About Assists
        </h3>
        <p class="text-fg-muted text-sm">
          Assist blades are the 4th component in a Beyblade X combo. They attach to the main blade
          to provide additional weight, balance, or attack/defense capabilities.
        </p>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Combo Format
        </h3>
        <div class="space-y-2 text-sm">
          <div class="text-fg-muted">
            4-part combo format:
          </div>
          <div class="font-mono text-fg">
            [Blade] + [Assist] [Ratchet][Bit]
          </div>
          <div class="text-fg-muted text-xs mt-2">
            Example: Hells Scythe + Phoenix Wing 3-60F
          </div>
        </div>
      </div>
      <div class="card card-padding">
        <h3 class="text-lg font-mono font-bold text-fg mb-3">
          <span class="text-accent">#</span> Scoring System
        </h3>
        <p class="text-fg-muted text-sm">
          Score is calculated using recency-weighted placement points: 1st = 3pts, 2nd = 2pts, 3rd = 1pt.
          Recent tournaments count more than older ones.
        </p>
      </div>
    </div>

    {/* Empty State */}
    <div id="empty-state" class="hidden mt-8 card card-padding text-center py-12">
      <div class="text-6xl mb-4">&#x1F50D;</div>
      <h3 class="text-xl font-mono font-bold text-fg mb-2">No Assist Data Found</h3>
      <p class="text-fg-muted">
        Assist blade combinations are not commonly recorded in tournament results yet.
        Check back as more tournaments use the 4-part combo format.
      </p>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedAssists, BLADE_SERIES, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      const assists = await getRankedAssists(25, 1, region);

      if (assists.length === 0) {
        // Show empty state
        document.getElementById('rankings-table')?.closest('.card')?.classList.add('hidden');
        document.getElementById('empty-state')?.classList.remove('hidden');
        return;
      }

      renderTable(assists);
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="9" class="text-center text-negative py-8">
              Failed to load assist rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  // Get color based on blade series
  function getAssistColor(name: string): { bg: string; text: string; border: string } {
    const series = BLADE_SERIES[name];
    if (series === 'BX') {
      return { bg: 'bg-series-bx/20', text: 'text-series-bx', border: 'border-series-bx/40' };
    } else if (series === 'CX') {
      return { bg: 'bg-series-cx/20', text: 'text-series-cx', border: 'border-series-cx/40' };
    } else if (series === 'UX') {
      return { bg: 'bg-series-ux/20', text: 'text-series-ux', border: 'border-series-ux/40' };
    }
    return { bg: 'bg-accent/20', text: 'text-accent', border: 'border-accent/30' };
  }

  function renderTable(assists: Awaited<ReturnType<typeof getRankedAssists>>) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    tbody.innerHTML = assists.map((assist, index) => {
      const color = getAssistColor(assist.name);
      const series = BLADE_SERIES[assist.name];
      return `
      <tr class="ranking-row">
        <td class="font-mono text-center">
          <span class="rank-number text-lg">${index + 1}</span>
        </td>
        <td>
          <div class="flex items-center gap-2">
            <span class="px-3 py-1 text-sm font-mono font-bold rounded ${color.bg} ${color.text} border ${color.border}">
              ${assist.name}
            </span>
            ${series ? `<span class="text-xs font-mono text-fg-muted">${series}</span>` : ''}
          </div>
        </td>
        <td class="text-right font-mono text-accent">${assist.raw_score.toFixed(1)}</td>
        <td class="text-right font-mono">${assist.uses}</td>
        <td class="text-right font-mono text-tier-ss">${assist.first}</td>
        <td class="text-right font-mono text-fg-muted">${assist.second}</td>
        <td class="text-right font-mono text-tier-a">${assist.third}</td>
        <td class="text-right font-mono">${assist.uses > 0 ? ((assist.first / assist.uses) * 100).toFixed(1) : '0.0'}%</td>
        <td class="text-right">${getTrendHtml(assist.trend)}</td>
      </tr>
    `}).join('');

    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 30 });
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-positive text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-negative text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-fg-muted text-sm">--</span>';
  }

  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
