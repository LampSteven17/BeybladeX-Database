---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Combo Rankings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-fg mb-2">
        <span class="text-series-ux">#</span> Combo Rankings
      </h1>
      <p class="text-fg-secondary">
        Full blade + ratchet + bit combinations ranked by weighted tournament performance.
      </p>
    </div>

    {/* Search Bar */}
    <div class="mb-4">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search combos (blade, ratchet, or bit)..."
          class="input w-full md:w-96 pl-10"
        />
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-fg-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    {/* Tier Filter */}
    <div class="mb-6 flex flex-wrap gap-3 items-center">
      <span class="text-fg-muted text-sm">Filter by Tier:</span>
      <div class="flex flex-wrap gap-2">
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 bg-accent/10 text-accent border-accent/30" data-tier="all">All</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-ss border-tier-ss/30 hover:bg-tier-ss/10" data-tier="SS">SS</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-s border-tier-s/30 hover:bg-tier-s/10" data-tier="S">S</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-a border-tier-a/30 hover:bg-tier-a/10" data-tier="A">A</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-b border-tier-b/30 hover:bg-tier-b/10" data-tier="B">B</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-c border-tier-c/30 hover:bg-tier-c/10" data-tier="C">C</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-d border-tier-d/30 hover:bg-tier-d/10" data-tier="D">D</button>
        <button class="tier-filter px-2 py-1 text-xs font-mono rounded border transition-all duration-200 text-tier-f border-tier-f/30 hover:bg-tier-f/10" data-tier="F">F</button>
      </div>
    </div>

    {/* Combo Rankings Table */}
    <div class="card card-padding">
      <div class="overflow-x-auto">
        <table class="data-table" id="rankings-table">
          <thead>
            <tr>
              <th class="w-16">#</th>
              <th class="w-20">Tier</th>
              <th>Blade</th>
              <th>Ratchet</th>
              <th>Bit</th>
              <th class="text-right">Score</th>
              <th class="text-right">Uses</th>
              <th class="text-right">1st</th>
              <th class="text-right">2nd</th>
              <th class="text-right">3rd</th>
              <th class="text-right">1st %</th>
              <th class="text-right">Trend</th>
            </tr>
          </thead>
          <tbody id="rankings-body">
            {/* Loading skeletons */}
            {Array.from({ length: 20 }, (_, i) => (
              <tr>
                <td colspan="12">
                  <div class="skeleton h-12 rounded"></div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    {/* Load More Button */}
    <div class="mt-6 text-center">
      <button
        id="load-more-btn"
        class="btn-primary hidden"
      >
        Load More
      </button>
    </div>
  </div>
</Layout>

<script>
  import { initDB, getRankedCombos, type ComboStats, type Region } from '../lib/db';
  import { staggerFadeIn } from '../lib/animations';

  let allCombos: ComboStats[] = [];
  let filteredCombos: ComboStats[] = [];
  let displayedCount = 50;
  let currentTier: string = 'all';
  let searchQuery: string = '';
  const LOAD_INCREMENT = 50;

  function getSelectedRegion(): Region {
    if (typeof localStorage !== 'undefined') {
      return (localStorage.getItem('beyblade-region') as Region) || 'ALL';
    }
    return 'ALL';
  }

  let allCombosWithRare: ComboStats[] = []; // Includes 1-use combos for search

  async function loadRankings() {
    try {
      await initDB();
      const region = getSelectedRegion();
      // Load combos with 2+ uses for main display
      allCombos = await getRankedCombos(500, 2, region);
      // Also load rare combos (1 use) for search functionality
      allCombosWithRare = await getRankedCombos(2000, 1, region);
      filteredCombos = allCombos;
      renderTable(filteredCombos.slice(0, displayedCount));
      updateLoadMoreButton();
      setupTierFilters();
      setupSearch();
    } catch (error) {
      console.error('Failed to load rankings:', error);
      const tbody = document.getElementById('rankings-body');
      if (tbody) {
        tbody.innerHTML = `
          <tr>
            <td colspan="12" class="text-center text-negative py-8">
              Failed to load combo rankings. Please refresh the page.
            </td>
          </tr>
        `;
      }
    }
  }

  function updateLoadMoreButton() {
    const btn = document.getElementById('load-more-btn');
    if (btn) {
      if (displayedCount < filteredCombos.length) {
        btn.classList.remove('hidden');
        btn.textContent = `Load More (${filteredCombos.length - displayedCount} remaining)`;
      } else {
        btn.classList.add('hidden');
      }
    }
  }

  function loadMore() {
    displayedCount += LOAD_INCREMENT;
    renderTable(filteredCombos.slice(0, displayedCount));
    updateLoadMoreButton();
  }

  function setupTierFilters() {
    document.querySelectorAll('.tier-filter').forEach(btn => {
      btn.addEventListener('click', () => {
        const tier = btn.getAttribute('data-tier') || 'all';
        currentTier = tier;
        updateTierStyles(tier);
        applyTierFilter();
      });
    });
  }

  function updateTierStyles(activeTier: string) {
    document.querySelectorAll('.tier-filter').forEach(btn => {
      const tier = btn.getAttribute('data-tier');
      btn.classList.remove('bg-accent/10', 'bg-tier-ss/10', 'bg-tier-s/10', 'bg-tier-a/10', 'bg-tier-b/10', 'bg-tier-c/10', 'bg-tier-d/10', 'bg-tier-f/10');
      if (tier === activeTier) {
        if (tier === 'all') btn.classList.add('bg-accent/10');
        else if (tier === 'SS') btn.classList.add('bg-tier-ss/10');
        else if (tier === 'S') btn.classList.add('bg-tier-s/10');
        else if (tier === 'A') btn.classList.add('bg-tier-a/10');
        else if (tier === 'B') btn.classList.add('bg-tier-b/10');
        else if (tier === 'C') btn.classList.add('bg-tier-c/10');
        else if (tier === 'D') btn.classList.add('bg-tier-d/10');
        else if (tier === 'F') btn.classList.add('bg-tier-f/10');
      }
    });
  }

  function applyFilters() {
    // Use rare combos dataset when searching, regular dataset otherwise
    let filtered = searchQuery ? allCombosWithRare : allCombos;

    // Apply search filter
    if (searchQuery) {
      const query = searchQuery.toLowerCase();
      filtered = filtered.filter(c =>
        c.blade.toLowerCase().includes(query) ||
        c.ratchet.toLowerCase().includes(query) ||
        c.bit.toLowerCase().includes(query) ||
        c.combo.toLowerCase().includes(query)
      );
    }

    // Apply tier filter
    if (currentTier !== 'all') {
      filtered = filtered.filter(c => c.tier === currentTier);
    }

    filteredCombos = filtered;
    displayedCount = 50; // Reset to initial count
    renderTable(filteredCombos.slice(0, displayedCount));
    updateLoadMoreButton();
  }

  function applyTierFilter() {
    applyFilters();
  }

  function setupSearch() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        searchQuery = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }
  }

  // Tier is now calculated in getRankedCombos using bell curve distribution
  function getTier(combo: ComboStats): 'SS' | 'S' | 'A' | 'B' | 'C' | 'D' | 'F' {
    return combo.tier || 'C';
  }

  function renderTable(combos: ComboStats[]) {
    const tbody = document.getElementById('rankings-body');
    if (!tbody) return;

    if (combos.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="12" class="text-center text-fg-muted py-8">
            No combos found.
          </td>
        </tr>
      `;
      return;
    }

    tbody.innerHTML = combos.map((combo) => {
      const tier = getTier(combo);
      return `
        <tr class="ranking-row hover:bg-panel">
          <td class="font-mono">
            <span class="rank-number text-lg">${combo.rank}</span>
          </td>
          <td>
            <span class="${getTierClass(tier)} cursor-pointer hover:ring-2 hover:ring-white/30" data-tier="${tier}">${tier}</span>
          </td>
          <td class="font-mono font-medium text-accent">${combo.blade}</td>
          <td class="font-mono text-series-ux">${combo.ratchet}</td>
          <td class="font-mono text-series-bx">${combo.bit}</td>
          <td class="text-right font-mono text-fg">${combo.raw_score.toFixed(1)}</td>
          <td class="text-right font-mono">${combo.uses}</td>
          <td class="text-right font-mono text-tier-ss">${combo.first}</td>
          <td class="text-right font-mono text-fg-muted">${combo.second}</td>
          <td class="text-right font-mono text-tier-a">${combo.third}</td>
          <td class="text-right font-mono">
            ${combo.uses > 0 ? ((combo.first / combo.uses) * 100).toFixed(1) : '0.0'}%
          </td>
          <td class="text-right">
            ${getTrendHtml(combo.trend)}
          </td>
        </tr>
      `;
    }).join('');

    // Add click handlers to tier badges
    tbody.querySelectorAll('[data-tier]').forEach(badge => {
      badge.addEventListener('click', () => {
        const tier = badge.getAttribute('data-tier') || 'all';
        currentTier = tier;
        updateTierStyles(tier);
        applyTierFilter();
      });
    });

    // Animate rows
    staggerFadeIn(tbody.querySelectorAll('tr'), { delay: 20 });
  }

  function getTierClass(tier: string): string {
    const classes: Record<string, string> = {
      SS: 'tier-badge-ss',
      S: 'tier-badge-s',
      A: 'tier-badge-a',
      B: 'tier-badge-b',
      C: 'tier-badge-c',
      D: 'tier-badge-d',
      F: 'tier-badge-f',
    };
    return classes[tier] || 'tier-badge';
  }

  function getTrendHtml(trend: number): string {
    if (trend > 0.1) {
      return `<span class="text-positive text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        +${(trend * 100).toFixed(0)}%
      </span>`;
    } else if (trend < -0.1) {
      return `<span class="text-negative text-sm inline-flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
        ${(trend * 100).toFixed(0)}%
      </span>`;
    }
    return '<span class="text-fg-muted text-sm">--</span>';
  }

  // Setup load more button
  document.getElementById('load-more-btn')?.addEventListener('click', loadMore);

  // Load on DOM ready
  document.addEventListener('DOMContentLoaded', loadRankings);

  // Reload when region changes
  window.addEventListener('regionchange', () => {
    loadRankings();
  });
</script>
