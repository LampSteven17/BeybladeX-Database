---
import RegionFilter from './RegionFilter.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { href: '/', label: 'Dashboard' },
  { href: '/combos', label: 'Combos' },
  { href: '/blades', label: 'Blades' },
  { href: '/ratchets', label: 'Ratchets' },
  { href: '/bits', label: 'Bits' },
  { href: '/assist', label: 'Assists' },
  { href: '/lockchips', label: 'Lock Chips' },
  { href: '/tools', label: 'Tools' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-canvas/95 backdrop-blur-sm border-b border-stroke">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-7 h-7 rounded bg-accent flex items-center justify-center">
          <span class="text-white font-bold text-sm">X</span>
        </div>
        <span class="font-semibold tracking-tight">
          <span class="text-fg">BeybladeX</span>
          <span class="text-fg-muted ml-1 text-sm font-normal hidden sm:inline">Database</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-1.5 rounded text-sm transition-all duration-150',
              isActive(item.href)
                ? 'bg-panel text-fg'
                : 'text-fg-secondary hover:text-fg hover:bg-panel',
            ]}
          >
            {item.label}
          </a>
        ))}
        <div class="ml-3 pl-3 border-l border-stroke">
          <RegionFilter />
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded text-fg-secondary hover:text-fg hover:bg-panel transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-stroke bg-canvas/95 backdrop-blur-sm">
    <div class="px-4 py-3 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block px-4 py-2.5 rounded text-sm transition-all duration-150',
            isActive(item.href)
              ? 'bg-panel text-fg'
              : 'text-fg-secondary hover:text-fg hover:bg-panel',
          ]}
        >
          {item.label}
        </a>
      ))}
      <div class="pt-3 mt-3 border-t border-stroke">
        <RegionFilter class="justify-center" />
      </div>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuBtn?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script>
